{
    "name": "marker-language",
    "displayName": "Marker Language Support",
    "description": "Syntax highlighting and language support for Marker DSL",
    "version": "1.0.0",
    "publisher": "dyigitpolat",
    "engines": {
      "vscode": "^1.70.0"
    },
    "categories": [
      "Programming Languages"
    ],
    "keywords": [
      "marker",
      "dsl",
      "llm",
      "prompting"
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/dyigitpolat/marker-vscode"
    },
    "contributes": {
      "languages": [
        {
          "id": "marker",
          "aliases": [
            "Marker",
            "marker"
          ],
          "extensions": [
            ".marker"
          ],
          "configuration": "./language-configuration.json",
          "icon": {
            "light": "./icon.png",
            "dark": "./icon.png"
          }
        }
      ],
      "grammars": [
        {
          "language": "marker",
          "scopeName": "source.marker",
          "path": "./syntaxes/marker.tmLanguage.json"
        }
      ],
      "snippets": [
        {
          "language": "marker",
          "path": "./snippets/marker.code-snippets"
        }
      ]
    },
    "devDependencies": {
      "@types/vscode": "^1.70.0",
      "@vscode/vsce": "^2.19.0"
    },
    "scripts": {
      "package": "vsce package",
      "publish": "vsce publish"
    }
  }